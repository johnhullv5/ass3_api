@model _300858525_Jiang__ASS.Models.Movie

<h3>Movie</h3>
<form method="post" action="/Movies/Delete/@Model.Id"
      id="deleteForm">
    @Html.AntiForgeryToken()
    <div class="btn-group">
        <a href="/Movies/Edit/@Model.Id"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            Edit movie
        </a>
       
        <button id="submit" type="submit" class="btn btn-danger btn-sm">
            <i class="glyphicon glyphicon-trash"></i>
            Delete movie
        </button>
        <a href="/Movies/"
           class="btn btn-primary btn-sm">
            <i class="glyphicon glyphicon-edit"></i>
            back to movies
        </a>
    </div>
</form>

<div class="media">
    <div class="media-left">
        <!-- [START bookimage] -->


        <img src="http://placekitten.com/g/128/192">
        <!-- [END bookimage] -->
    </div>
    <div class="media-body">
        <h4 class="movie-title">
            @Model.Title
            <small>@(Model.PublishedDate.HasValue ? Model.PublishedDate.Value.ToString("d") : null)</small>
        </h4>
        <h5 class="movie-director">
            By @(String.IsNullOrEmpty(Model.Director) ?
        "Unknown" : Model.Director)
        </h5>
       

        
    </div>
   

    @using (Html.BeginForm("AddComment", "Movies", FormMethod.Post))
    {
        @Html.TextBoxFor(model => model.comments);
       
        <button type="submit">Add comment</button>
    }
    <form method="post" enctype="multipart/form-data" asp-controller="Movies" asp-action="Download" asp-route-id="@Model.Id">
        
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Download" />
            </div>
        </div>
    </form>
</div>
