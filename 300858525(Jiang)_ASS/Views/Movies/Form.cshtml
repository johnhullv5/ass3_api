@model _300858525_Jiang__ASS.ViewModels.Movies.Form

<h3>@Model.Action movie</h3>
<!-- [START form] -->
<form action="/Movies/@Model.FormAction/@Model.Movie.Id" method="post" id="movie-form" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Title)
        @Html.EditorFor(model => model.Movie.Title, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Movie.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Director)
        @Html.EditorFor(model => model.Movie.Director, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Movie.Director, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Movie.PublishedDate)
        @Html.EditorFor(model => model.Movie.PublishedDate, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
        @Html.ValidationMessageFor(model => model.Movie.PublishedDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Movie.Description)
        @Html.EditorFor(model => model.Movie.Description, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
        @Html.ValidationMessageFor(model => model.Movie.Description, "", new { @class = "text-danger" })
    </div>
    <!-- [START image] -->
    <div class="form-group">
        @Html.Label("Cover Image")
        <input type="file" id="image" name="image" value="@Model.Movie.ImageUrl" class="form-control">
        @Html.HiddenFor(model => model.Movie.ImageUrl)
    </div>
    <!-- [END image] -->

    <button type="submit" class="btn btn-success">Upload</button>
</form>
<!-- [END form] -->
